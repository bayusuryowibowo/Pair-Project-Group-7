<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Dimbay's Steak House</title>
</head>
<body>
  <!-- navigation bar nanti dibuat dinamis jika masih ada sisa waktu -->
  <header>
    <nav>
      <div>
        <a href="/">Logo</a>
        <div>
          <ul>
            <li>
              <a href="/register">Register</a>
            </li>
            <li>
              <a href="/login">Login</a>
            </li>
            <!-- link Reservation disesuaikan dengan route-nya nanti -->
            <li>
              <a href="/reservation">Reservation</a>
            </li>
            <!-- link Logout disesuaikan dengan route-nya nanti -->
            <li>
              <a href="/logout">Logout</a>
            </li>
          </ul>
        </div>
    </nav>
  </header>
  <!-- section reservation -->
  <div>
    <h1>Reservation</h1>
    <button href="/">Cancel Reservation</button>
    <form action="/reservation" method="post">
      <div>
        <label for="date">Date of Reservation :</label>
        <input type="datetime-local" name="date" id="">
      </div>
      <div>
        <label for="tableNumber">Table Number :</label>
        <select name="tableNumber" id="">
          <option value="" selected>--Select Table Number--</option>
          <option value="1">1</option>
          <option value="2">2</option>
          <option value="3">3</option>
        </select>
      </div>
      <div>
       <input type="reset" value="Cancel">
      </div>
      <div>
        <h2>Choose 1 dish for your serving</h2>
        <!-- looping data dishes di sini -->
       
        <% dataDish.forEach(perDish => { %>
        <div>
          <!-- foto hidangan -->
          <img src="<%= perDish.imgURL %>">
          <div>
            <!-- nama hidangan -->
            <h5><%= perDish.name %></h5>
            <!-- deskripsi hidangan -->
            <p><%= perDish.description %></p>
            <button type="submit" name="DishId" value="<%= perDish.id %>">Order</button>
        <% }) %>
          </div>
        </div>
      </div>
    </form>
  </div>
  <!-- copyright dan nama para pembuat project di footer -->
  <footer>
  
  </footer>
</body>
</html>