<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Dimbay's Steak House</title>
  <link rel="icon" href="/dimbays-website-favicon-color.ico" type="image/x-icon">
  <link rel="stylesheet" href="/style.css">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-9ndCyUaIbzAi2FUVXJi0CjmCapSmO7SnpJef0486qhLnuZ2cdeRhO02iuK6FUUVM" crossorigin="anonymous">
</head>
<body>
  <!-- navigation bar nanti dibuat dinamis jika masih ada sisa waktu -->
  <header>
    <nav id="navbar" class="navbar navbar-expand-lg bg-body-tertiary" data-bs-theme="dark">
      <div class="container-fluid">
        <a class="navbar-brand" href="#">
          <img src="/svg/logo-no-background.svg" width="150" height="40">
        </a>
        <div class="collapse navbar-collapse" id="navbarNav">
          <ul class="navbar-nav">
            <li>
              <a class="nav-link" href="/">Home</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/register">Register</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/login">Login</a>
            </li>
            <!-- link Reservation disesuaikan dengan route-nya nanti -->
            <li class="nav-item">
              <a class="nav-link active" aria-current="page" href="/reservation">Reservation</a>
            </li>
          </ul>
        </div>
        <div class="collapse navbar-collapse d-flex justify-content-end" id="navbarNav">
          <ul class="navbar-nav">
            <!-- link Logout disesuaikan dengan route-nya nanti -->
            <li class="nav-item">
              <a class="nav-link" href="/logout">Logout</a>
            </li>
          </ul>
        </div>
    </nav>
  </header>
  <!-- section reservation -->
  <div>
     <% if (msg) { %>
     <p style="color: red;"><%= msg %></p>
      
     <% } %>
    <h1>Reservation</h1>
    <button onclick="location.href='/'" class="btn btn-danger">Cancel Reservation</button>
    <form action="" method="post">
      <div class="mb-3">
        <label for="date" class="form-label">Date of Reservation :</label>
        <input type="datetime-local" name="date" class="form-control">
      </div>
      <div class="mb-3">
        <label for="tableNumber" class="form-label">Table Number :</label>
        <select name="tableNumber" class="form-control">
          <option value="" selected>--Select Table Number--</option>
          <option value="1">1</option>
          <option value="2">2</option>
          <option value="3">3</option>
        </select>
      </div>
      <div>
        <h2>Choose 1 dish for your serving</h2>
        <!-- looping data dishes di sini -->
        <% dataDish.forEach(perDish => { %>
         
        <div class="card" style="width: 18rem;">
          <!-- foto hidangan -->
          <img src="<%= perDish.imgURL %>" class="card-img-top">
          <div class="card-body">
            <!-- nama hidangan -->
            <h5 class="card-title"></h5>
            <!-- deskripsi hidangan -->
            <p class="card-text"></p>
            <button class="btn btn-primary" type="submit" name="DishId"value="<%= perDish.id %>">Order</button>
        <% }) %>
          </div>
        </div>
      </div>
    </form>
  </div>
  <!-- copyright dan nama para pembuat project di footer -->
  <footer>
  
  </footer>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js" integrity="sha384-geWF76RCwLtnZ8qwWowPQNguL3RmwHVBC9FhGdlKrxdiJJigb/j/68SIy3Te4Bkz" crossorigin="anonymous"></script>
</body>
</html>