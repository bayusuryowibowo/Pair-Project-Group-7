<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Dimbay's Steak House</title>
  <link rel="icon" href="/dimbays-website-favicon-color.ico" type="image/x-icon">
  <link rel="stylesheet" href="/style.css">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-9ndCyUaIbzAi2FUVXJi0CjmCapSmO7SnpJef0486qhLnuZ2cdeRhO02iuK6FUUVM" crossorigin="anonymous">
</head>
<body>
  <!-- navigation bar nanti dibuat dinamis jika masih ada sisa waktu -->
  <header>
    <nav id="navbar" class="navbar navbar-expand-lg bg-body-tertiary" data-bs-theme="dark">
      <div class="container-fluid">
        <a class="navbar-brand" href="#">
          <img src="/svg/logo-no-background.svg" width="150" height="40">
        </a>
        <div class="collapse navbar-collapse" id="navbarNav">
          <ul class="navbar-nav">
            <li>
              <a class="nav-link" href="/">Home</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/register">Register</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/login">Login</a>
            </li>
            <!-- link Reservation disesuaikan dengan route-nya nanti -->
            <li class="nav-item">
              <a class="nav-link active" aria-current="page" href="/reservation">Reservation</a>
            </li>
          </ul>
        </div>
        <div class="collapse navbar-collapse d-flex justify-content-end" id="navbarNav">
          <ul class="navbar-nav">
            <!-- link Logout disesuaikan dengan route-nya nanti -->
            <li class="nav-item">
              <a class="nav-link" href="/logout">Logout</a>
            </li>
          </ul>
        </div>
    </nav>
  </header>
  <!-- section reservation -->
  <div>
    <h1>Reservation</h1>
    <button onclick="location.href='/datareservation'" class="btn btn-danger">Cancel Reservation</button>
    <table style="border: 1px solid;">

     <tr>
        <th>Code</th>
        <th>Date</th>
        <th>Table Number</th>
        <th>Total Price</th>
        <th>Action</th>
      </tr>
   <% data.forEach(perData => { %>
    
      <tr>
        <td><%= perData.code %></td>
        <td><%= perData.date %></td>
        <td><%= perData.tableNumber %></td>
        <td><%= formatCurrency(perData.totalPrice) %></td>
        <td>
          <a href="/reservation/<%= perData.id %>/delete"><button>Delete</button></a>
        </td>
      </tr>
   <% }) %>
     
    </table>
  </div>
  <!-- copyright dan nama para pembuat project di footer -->
  <footer>
  
  </footer>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js" integrity="sha384-geWF76RCwLtnZ8qwWowPQNguL3RmwHVBC9FhGdlKrxdiJJigb/j/68SIy3Te4Bkz" crossorigin="anonymous"></script>
</body>
</html>