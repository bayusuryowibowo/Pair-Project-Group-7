<%- include('../views/partials/Header.ejs', {title :'Dishes'}) %>
<body>

  <h1>Dishes</h1>
  <style>
    table,th,td{
      border: 1px solid;
    }
  </style>
  <a href="/dishes/:id/add">Add new Dish</a><br><br>

 <table>
  <tr>
    <th>Name</th>
    <th>Description</th>
    <th>ImgURL</th>
    <th>price</th>
    <th>Action</th>
  </tr>
   <% dataDish.forEach(perDish => { %>
   <tr>
    <td><%= perDish.name %></td>
    <td><%= perDish.description %></td>
    <td><img src="<%= perDish.imgURL %>" alt=""></td>
    <td><%= formatCurrency(perDish.price) %></td>
    <td>
      <a href="/dishes/<%= perDish.id %>/delete"><button>Delete</button></a>
    </td>
   </tr>
   <% }) %>



 </table>


 
</body>

</html>